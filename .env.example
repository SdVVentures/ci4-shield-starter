#--------------------------------------------------------------------
# CI4 Shield Starter - Environment Configuration
#
# This file contains all the environment variables needed for the
# CI4 Shield Starter application to run. Copy this file to .env
# and update the values as needed.
#
# For production environments, make sure to set secure values
# for passwords, encryption keys, and other sensitive data.
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

# Set to 'production' for live environments
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# Base URL with trailing slash
app.baseURL = 'http://localhost:8080/'

# Force HTTPS (recommended for production)
app.forceGlobalSecureRequests = false

# Content Security Policy
app.CSPEnabled = false

# Application name
app.name = 'CI4 Shield Starter'

# Application version
app.version = '1.0.0'

# Default locale
app.defaultLocale = 'en'

# Supported locales
app.supportedLocales = ['en']

# Application timezone
app.appTimezone = 'UTC'

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

# Main database connection
database.default.hostname = localhost
database.default.database = ci4_shield_starter
database.default.username = root
database.default.password = root
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_general_ci

# Test database connection (for running tests)
# database.tests.hostname = localhost
# database.tests.database = ci4_shield_starter_tests
# database.tests.username = root
# database.tests.password = root
# database.tests.DBDriver = MySQLi
# database.tests.DBPrefix =
# database.tests.charset = utf8mb4
# database.tests.DBCollat = utf8mb4_general_ci
# database.tests.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# IMPORTANT: Generate a unique key for each application
# You can use: php spark key:generate
encryption.key = 5de9cf698e8b2cbb0f03d3db6f2f9a2e3d5f1e8c7b4a9d6e3f2c1b0a8d7e6f5
encryption.driver = OpenSSL
encryption.blockSize = 16
encryption.digest = SHA512

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

# Session driver (FileHandler, DatabaseHandler, RedisHandler, MemcachedHandler)
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.savePath = null
session.expiration = 7200
session.regenerateDestroy = false
session.cookieName = 'ci4_shield_session'
session.cookie_secure = false
session.cookie_httponly = true
session.cookie_samesite = 'Lax'

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

# Log threshold (0=Emergency, 1=Alert, 2=Critical, 3=Error, 4=Warning, 5=Notice, 6=Info, 7=Debug, 9=All)
logger.threshold = 4

#--------------------------------------------------------------------
# EMAIL
#--------------------------------------------------------------------

# Email configuration
email.fromEmail = 'noreply@example.com'
email.fromName = 'CI4 Shield Starter'
email.protocol = 'smtp'
email.SMTPHost = 'smtp.mailtrap.io'
email.SMTPUser = 'your_smtp_username'
email.SMTPPass = 'your_smtp_password'
email.SMTPPort = 2525
email.SMTPCrypto = 'tls'
email.mailType = 'html'
email.charset = 'utf-8'
email.wordWrap = true
email.priority = 3

#--------------------------------------------------------------------
# SHIELD AUTHENTICATION
#--------------------------------------------------------------------

# Registration settings
auth.allowRegistration = true
auth.emailActivation = true

# Authentication actions
auth.actions.register = 'CodeIgniter\Shield\Authentication\Actions\EmailActivator'
auth.actions.login = 'CodeIgniter\Shield\Authentication\Actions\RememberMeAction'

# Password requirements
auth.passwords.minLength = 8
auth.passwords.needsDigit = true
auth.passwords.needsLowercase = true
auth.passwords.needsUppercase = true
auth.passwords.needsSymbol = true

# Token lifetimes
auth.emailActivator.activationTokenLifetime = 1 day
auth.passwordReset.tokenLifetime = 1 hour

# Remember me settings
auth.sessionConfig.rememberLength = 30 day

# Login attempts
auth.maxLoginAttempts = 5
auth.lockoutTime = 5 minutes

#--------------------------------------------------------------------
# CUSTOM APPLICATION SETTINGS
#--------------------------------------------------------------------

# Admin user seed
app.adminEmail = 'admin@example.com'
app.adminUsername = 'admin'
app.adminPassword = 'Admin123!'

# File upload limits
app.maxFileSize = 5242880  # 5MB
app.allowedFileTypes = 'jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,zip'

# Pagination
app.perPage = 10
